<!-- Method Documentation URL: https://www.pipelinedeals.com/api/docs/resources/companies -->
<template name="createCompany" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="name" description="Name of the company."/>
   <parameter name="description" description="Description of the company."/>
   <parameter name="email" description="Email of the company."/>
   <parameter name="website" description="Web of the company."/>
   <parameter name="fax" description="Fax of the company."/>
   <parameter name="customFields" description="Custom fields of the company."/>
   <parameter name="createdAt" description="Created at of the company."/>
   <parameter name="updatedAt" description="Updated at of the company."/>
   <parameter name="address1" description="Address 1 of the company."/>
   <parameter name="city" description="City of the company."/>
   <parameter name="companyId" description="ID of the company to update."/>
   <sequence>
      <property name="uri.var.name" expression="$func:name"/>
      <property name="uri.var.description" expression="$func:description"/>
      <property name="uri.var.email" expression="$func:email"/>
      <property name="uri.var.website" expression="$func:website"/>
      <property name="uri.var.fax" expression="$func:fax"/>
      <property name="uri.var.customFields" expression="$func:customFields"/>
      <property name="uri.var.createdAt" expression="$func:createdAt"/>
      <property name="uri.var.updatedAt" expression="$func:updatedAt"/>
      <property name="uri.var.address1" expression="$func:address1"/>
      <property name="uri.var.city" expression="$func:city"/>
      <property name="uri.var.companyId" expression="$func:companyId"/>
      <payloadFactory media-type="json">
         <format>
            {"company": {
                "description": "$1",
                "name": "$2",
                "email": "$3"
            }}
         </format>
         <args>
            <arg expression="get-property('uri.var.description')"/>
            <arg expression="get-property('uri.var.name')"/>
            <arg expression="get-property('uri.var.email')"/>
         </args>
      </payloadFactory>
      <script language="js">
         <![CDATA[
            var createdAt = mc.getProperty('uri.var.createdAt');
            var website = mc.getProperty('uri.var.website');
            var apiKey = mc.getProperty('uri.var.apiKey');
            var city = mc.getProperty('uri.var.city');
            var customFields = mc.getProperty('uri.var.customFields');
            var address1 = mc.getProperty('uri.var.address1');
            var fax = mc.getProperty('uri.var.fax');
            var updatedAt = mc.getProperty('uri.var.updatedAt');
            var jsonPayload = mc.getPayloadJSON();
            var company = jsonPayload["company"];
            if (website != null && website != ""){
               company.web = website;
            }
            if (fax != null && fax != ""){
               company.fax = fax;
            }
            if (customFields != null && customFields != ""){
               company.custom_fields = eval("(" + customFields + ")");
            }
            if (createdAt != null && createdAt != ""){
               company.created_at = createdAt;
            }
            if (updatedAt != null && updatedAt != ""){
               company.updated_at = updatedAt;
            }
            if (address1 != null && address1 != ""){
               company.address_1 = address1;
            }
            if (city != null && city != ""){
               company.city = city;
            }
            jsonPayload.company = company;
            mc.setPayloadJSON(jsonPayload);
         ]]>
      </script>
      <call>
         <endpoint>
            <http method="post" uri-template="{+uri.var.apiUrl}/companies.json?api_key={+uri.var.apiKey}"/>
         </endpoint>
      </call>
   </sequence>
</template>
